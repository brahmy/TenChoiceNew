<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/id_adapter_transaction_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:background="@color/milky_white"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_adapter_transaction_approved_date_Rl">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Approved Date "
            android:textSize="14sp"
            android:textColor="@color/black"
            android:id="@+id/id_adapter_transaction_approved_date_title_textView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datee"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/id_adapter_transaction_approved_date_title_textView"
                android:textColor="@color/black"
                android:id="@+id/id_adapter_transaction_approved_date_textView"/>

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/id_adapter_transaction_approved_date_Rl"
            android:layout_centerInParent="true"
            android:id="@+id/id_adapter_transaction_approved_amount_textView"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_adapter_transaction_approved_amount_textView"
            android:id="@+id/id_adapter_transaction_paid_date_Rl">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Paid Date "
                android:textSize="14sp"
                android:textColor="@color/black"
                android:id="@+id/id_adapter_transaction_paid_date_title_textView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datee"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/id_adapter_transaction_paid_date_title_textView"
                android:textColor="@color/black"
                android:id="@+id/id_adapter_transaction_paid_date_textView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Success"
                android:layout_alignParentEnd="true"
                android:textSize="18sp"
                android:textColor="@color/green"
                android:id="@+id/id_adapter_transaction_paid_status_textView"/>

        </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>