<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="5dp"
    android:layout_margin="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_adapter_home_loan_main_card_view"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_weight="0.8"
                android:text="RS300000"
                android:textSize="25sp"
                android:padding="7dp"
                android:textColor="@color/milky_white"
                android:textStyle="bold"
                android:gravity="start|center"
                android:id="@+id/id_adapter_home_loan_main_amount_txtVW" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text=" "
                android:padding="2dp"
                android:textColor="@color/milky_white"
                android:gravity="center"
                android:id="@+id/id_adapter_home_loan_main_emi_txtVW" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:gravity="end">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_gravity="end"
                    android:text="15days"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/milky_white"
                    android:gravity="end"
                    android:id="@+id/id_adapter_home_loan_main_days_txtVW" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:text="Apply Now"
                    android:textStyle="bold"
                    android:textColor="@color/milky_white"
                    android:gravity="center"
                    android:id="@+id/id_adapter_home_loan_main_apply_txtVW" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.v7.widget.CardView>

